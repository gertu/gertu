.signupform
  float right
  background: transparent-green
  border-radius 10px
  padding 5px 50px 25px 50px
  text-align center

  >h3
    text-align center
  .btn.btn-secondary
    margin-top 15px

  form.signup
    margin-left 15%
    margin-right 15%
    .form-actions
      .btn.btn-primary
        width 75%

    .form-control
      &:focus
        border-color #888
        box-shadow(inset,0,1px,1px,rgba(0,0,0,0.075))
        box-shadow(0,0,8px,rgba(black,0.6))

.content
  margin 8% 0
  padding 0
  width 100%

  .steps
    float left
    width 100%
    margin 50% 0
    border-radius 10px
    background-size(contain)
    text-align center
    font-size 18px

    .step-img
      background url(/img/steps_sprite.png) no-repeat center center
      background-size(cover)
      width 60px
      height 60px
      margin 0 auto

    .step-1
      background-position left top

    .step-2
      background-position -60px top

    .step-3
      background-position -120px top

    .step-4
      background-position right top

    .step-title
      padding 4px 0
      color light-green
      margin 3px 0 6px

    .step-desc
      font-size 20px
    img
      width 30px
  .desc
    width 100%
    margin-bottom 16px
    color lighter-green
    float left
    text-align center

  .web-data
    padding 50px 0
    float left
    width 100%
    margin 30% 0

    .data-desc
      text-align center
      font-size 18px

      .icon
        background url(/img/webdata_sprite.png) no-repeat center center
        background-size(cover)
        width 60px
        height 60px
        margin 0 auto

      .icon1
        background-position left top

      .icon2
        background-position -60px top

      .icon3
        background-position -120px top

      .icon4
        background-position right top

      .number
        font-size 36px

.col-md-3.step, .col-md-3.data-desc
  padding 5% 0
  // border-radius 10px
  background: transparent-green


