// functions
gradient(direction, color1, color2)
  background -webkit-linear-gradient(direction, color1, color2) /* For Safari */
  background -o-linear-gradient(direction, color1, color2)      /* For Opera 11.1 to 12.0 */
  background -moz-linear-gradient(direction, color1, color2)    /* For Firefox 3.6 to 15 */
  background linear-gradient(direction, color1, color2)         /* Standard syntax */


// titles
h1, h2, h3
 color dark-green

// buttons
.btn-primary
  color dark-green
  background-color light-orange
  border 0
  &:hover, &:focus, &:active
    color light-green
    transition(background-color,ease-in-out,.10s)
    background-color dark-orange
    border-color dark-orange

.btn-primary[disabled]
  background-color lighten(light-orange,20)
  border-color lighten(dark-orange,20)

.btn-secondary
  @extends .btn-primary
  font-size 60%

.line-through
  text-decoration line-through

.map-canvas
  height 450px
  width 100%
  margin auto

