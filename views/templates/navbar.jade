.navigation.navbar.navbar-inverse.navbar-fixed-top(data-ng-controller='HeaderController', data-role="navigation")
  .navbar-inner
    .container
      .row
        .col-md-4
          ul.nav.navbar-nav
            li(data-ng-repeat='item in menu', ui-route='/{{item.link}}', ng-class='{active: $uiRoute}')
              a(href='/{{item.link}}') {{item.title}}
        .col-md-8
          ul.nav.navbar-nav.pull-right(data-ng-hide='global.authenticated')
            include signinform
          ul.nav.navbar-nav.navbar-nav.pull-right(data-ng-show='global.authenticated')
            li.dropdown(data-ng-show='global.user')
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | {{global.user.firstName}} {{global.user.lastName}}
                b.caret
              ul.dropdown-menu
                li
                  a(data-ng-href='/profile') Perfil
                li
                  a(href='/signout', target='_self') Signout
            li.dropdown(data-ng-show='global.shop')
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                | {{global.shop.name}}
                b.caret
              ul.dropdown-menu
                li
                  a(href='/shop/signout', target='_self') Signout
