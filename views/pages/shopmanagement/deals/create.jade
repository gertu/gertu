extends ../layouts/default
block content
  include ../layouts/top-menu
  .row-fluid
    .span2
    .span8
      .well
          h1 Nueva oferta
        form(role="form", method="POST", action="/shopmanagement/deals/new")
          .row-fluid
            .span6
              label(for='categoryname') Categoria
              select#categoryname(name='categoryname', value='#{categoryname}')
                - for category in categories
                    option(value='#{category.name}') #{category.name}
              label(for='name') Name
              input#name(name='name', type='text', value='#{name}', placeholder='Title', required='required')
              label(for='description') Description
              textarea#description(name='description', rows='10', value='#{description}',
                placeholder='Descripción de la oferta...', required='required')
              label(for='price') Price:
              .input-prepend
                span.add-on €
                input#price(type='number', name='price', value='#{price}', required='required')
              label(for='gertuprice') Gertuprice:
              .input-prepend
                span.add-on €
                input#gertuprice(type='number', name='gertuprice', value='#{gertuprice}', required='required')
              label(for='discount') %Discount:
              .input-prepend
                span.add-on %
                input#discount(type='number', name='discount', value='#{discount}', required='required')
            .span6
              label(for='datainit') Fecha de inicio
              input#datainit(type="date", name='datainit', show-weeks="false", starting-day="1", min="minDate", value="#{datainit}")
              label(for='dataend') Fecha fin
              input#dataend(type="date", name='dataend', show-weeks="false", starting-day="1", min="minDate", value="#{dataend}")
              label(for='dias') Elige los dias de la semana
              table
                - for day in days
                  tr
                    td
                      input(type='checkbox', name='selecteddays[]', value='#{day}')
                    td
                      label #{day}
              label(for='quantity') Quantity:
              input#quantity(type='number',name='quantity', value='#{quantity}', required='required')
          .row-fluid
            .pull-right
              a.btn.btn-danger.btn-lg(href="/shopmanagement/deals/list")
                | Cancelar
              input.btn.btn-success.btn-lg(type='submit', value='Guardar')